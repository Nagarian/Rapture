<p id="notice"><%= notice %></p>

<h1>Listing User Movies</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Is seen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_movies.each do |user_movie| %>
      <tr>
        <td><%= user_movie.movie_id %></td>
        <td><%= user_movie.is_seen %></td>
        <td><%= link_to 'Show', user_movie %></td>
        <td><%= link_to 'Edit', edit_user_movie_path(user_movie) %></td>
        <td><%= link_to 'Destroy', user_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

