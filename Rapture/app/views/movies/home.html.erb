<div id="listView-header" class="header">
    <div class="win-navbarcommand-icon listView-header-icon"></div>
    <h2 data-win-bind="src: Title"></h2>
    <p data-win-bind="src: subTitle"></p>
</div>

<div class="homePosterTemplateTemplate" data-win-control="WinJS.Binding.Template" style="display: none">
    <div class="homePosterTemplateItem">
        <img src="#" class="homePosterTemplateItem-Image" data-win-bind="src: movie.poster_path App.converter.tmdbConverter; className: user_inf.isSeen App.converter.deactivationImageConverter" />

        <div class="homePosterTemplateItem-Buttons">
            <a href="#" data-win-bind="href: id App.converter.hashConverter; onclick: FavClick;"><button class="homePosterTemplateItem-ButtonFavorite" data-win-bind="className: user_inf.isFav App.converter.deactivationButtonFavConverter">Favoris</button></a>
            <a href="#" data-win-bind="href: id App.converter.hashConverter; onclick: FavClick;"><button class="homePosterTemplateItem-ButtonSeen" data-win-bind="className: user_inf.isSeen App.converter.deactivationButtonSeenConverter">Déjà vu</button></a>
        </div>
        <!--<div class="homePosterTemplateItem-Detail">
            <h4 data-win-bind="textContent: title"></h4>
            <!--<h6 data-win-bind="textContent: overview"></h6>
        </div>-->
    </div>
</div>

<div id="listView"
     class="win-selectionstylefilled"
     data-win-control="WinJS.UI.ListView"
     data-win-options="{
            itemDataSource: App.home.data.dataSource,
            itemTemplate: select('.homePosterTemplateTemplate'),
            header: select('.header'),
            selectionMode: 'single',
            tapBehavior: 'directSelect',
            layout: { type: WinJS.UI.GridLayout, orientation: 'vertical' }
    }">
</div>

<%= stylesheet_link_tag    'movies/home', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'movies/home', 'data-turbolinks-track' => true %>